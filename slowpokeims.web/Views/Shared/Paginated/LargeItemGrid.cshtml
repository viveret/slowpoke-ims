@model SlowPokeIMS.Web.ViewModels.IPaginatedEnumerableViewModel
@{
    var lasti = Model.Offset + 1;
}
<div class="d-grid grid__3 g32">
    @foreach (var item in Model.Items)
    {
        var i = lasti;
        <div class="grid--item">
            <span>#@string.Format("{0:n0}", i)</span>
            <partial name="Paginated/LargeItemGrid_Item_@item.GetType().Name" model="@item"/>
        </div>
        lasti++;
    }
</div>