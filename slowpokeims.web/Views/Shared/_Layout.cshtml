<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - @Config.System.Title</title>

    <environment include="Development">
        <link rel="stylesheet" href="~/js/site.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="~/js/site.min.css" asp-append-version="true" />
    </environment>
</head>
<body class="theme-system @Config.Style.BodyClass">
    <nav class="s-topbar ps-fixed h64">
        <div class="s-topbar--container px8">
            <partial name="_NavigationHorizontal.cshtml" />
        </div>
    </nav>

    <div class="d-flex mx-auto w100 wmx12">
        <partial name="_NavigationVertical.cshtml" />
        @RenderBody()
    </div>

    <footer>
        <p>@Html.Raw(Config.Style.Footer) - @Config.System.Title</p>
    </footer>

    <environment include="Development">
        <script src="~/js/site.js" asp-append-version="true"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/js/site.min.js" asp-append-version="true"></script>
    </environment>

    @RenderSection("Scripts", required: false)
</body>
</html>